<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background_png"
    tools:context=".FeedbackActivity">

    <TextView
        android:id="@+id/feedback_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/feedback_rating_bar"
        android:text="Product"
        android:textSize="32sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginBottom="20dp"

        />
    <RatingBar
        android:id="@+id/feedback_rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:isIndicator="false"
        android:numStars="5"
        android:rating="1.6"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/feedback_submit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textAllCaps="false"
        android:padding="20dp"
        android:layout_below="@+id/feedback_rating_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/buttons"
        />

</RelativeLayout>