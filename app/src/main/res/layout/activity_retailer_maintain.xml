<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:background="@color/white"
    app:cardElevation="15dp"
    tools:context=".retailer.RetailerMaintainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/maintain_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product Name"
            android:textColorHint="@color/colorPrimary"
            android:textAlignment="center"
            android:padding="15dp"
            android:textSize="35dp"
            android:textStyle="bold|italic"
            android:textColor="@color/colorPrimary"
            />

        <ImageView
            android:id="@+id/maintain_product_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/maintain_product_name"
            android:scaleType="centerCrop"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/maintain_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maintain_product_image"
            android:hint="Product Price"
            android:textStyle="bold"
            android:textColorHint="@color/colorPrimary"
            android:background="@drawable/input_design"
            android:padding="5dp"
            android:textAlignment="center"
            android:textSize="40dp"
            android:textColor="@color/colorPrimary"
            />

        <EditText
            android:id="@+id/maintain_product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maintain_product_price"
            android:hint="Product Description"
            android:textColorHint="@color/colorPrimary"
            android:background="@drawable/input_design"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:textStyle="italic"
            android:textAlignment="center"
            android:textSize="14dp"
            android:textColor="@color/colorPrimaryDark"
            />
        <CheckBox
            android:id="@+id/maintain_stock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="In Stock"
            android:checked="true"
            android:textSize="18sp"
            android:layout_below="@+id/maintain_product_description"

            />
        <Button
            android:id="@+id/apply_changes_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maintain_stock"
            android:text="Apply Changes"
            android:background="@drawable/input_design"
            android:layout_marginTop="5dp"
            android:padding="15dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="24dp"
            android:textColor="@color/black"
            />
        <Button
            android:id="@+id/delete_product_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Delete"
            android:background="@drawable/input_design"
            android:layout_marginTop="5dp"
            android:padding="15dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="24dp"
            android:textColor="@color/black"
            />


    </RelativeLayout>

</androidx.cardview.widget.CardView>