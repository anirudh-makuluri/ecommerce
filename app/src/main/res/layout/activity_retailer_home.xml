<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".retailer.RetailerHomeActivity">

    <TextView
        android:id="@+id/retailer_add_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New Product"
        android:gravity="center"
        android:layout_marginTop="120dp"
        android:textAlignment="center"
        android:textSize="30sp"
         />
    <LinearLayout
        android:id="@+id/retailer_layout1"
        android:layout_below="@+id/retailer_add_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/vegetables"
            android:layout_marginRight="20dp"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/shoess"
            android:layout_marginTop="25dp"
            />
        <ImageView
            android:id="@+id/fruits"
            android:layout_marginRight="20dp"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/tshirts"
            android:layout_marginTop="25dp"
            />
        <ImageView
            android:id="@+id/dairy"
            android:layout_marginRight="20dp"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/tshirts"
            android:layout_marginTop="25dp"
            />
        <ImageView
            android:id="@+id/readymade"
            android:layout_marginRight="20dp"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/shoess"
            android:layout_marginTop="25dp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/retailer_layout2"
        android:layout_below="@+id/retailer_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/milk"
            android:layout_marginRight="20dp"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/shoess"
            android:layout_marginTop="25dp"
            />
        <ImageView
            android:id="@+id/beverages"
            android:layout_marginRight="20dp"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/tshirts"
            android:layout_marginTop="25dp"
            />
        <ImageView
            android:id="@+id/breakfast"
            android:layout_marginRight="20dp"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/tshirts"
            android:layout_marginTop="25dp"
            />
        <ImageView
            android:id="@+id/foodgrams"
            android:layout_marginRight="20dp"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/shoess"
            android:layout_marginTop="25dp"
            />

    </LinearLayout>


</RelativeLayout>